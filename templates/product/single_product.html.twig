<div class="product-item text-center">
  <a href="{{ path('product', { 'slug' : product.slug }) }}"><img src="/images/product/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid bd-placeholder-img rounded"></a>
  <!--passer le sleug entre {'slug':cherche la donné associé (product.slug)} -->
  <h5>{{ product.name }}</h5>
  <span class="product-subtitle">{{ product.subtitle }}</span>
  <span class="product-price">{{ (product.price / 100)|number_format(2, ',', '.') }} dh</span>
</div>
