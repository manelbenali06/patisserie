{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Pâtisserie El bachri{% endblock %}

{% block content %}
    <h1 class="text-center">RÉGALEZ-VOUS</h1>

    <div class="row">
        <div class="col-md-4">
            <img src="/images/product/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid bd-placeholder-img rounded">
        </div>
        <div class="col-md-7 my-auto">
            <h3>{{ product.name }}</h3>
            <p>{{ product.subtitle }}</p>
            <span class="product-page-price">{{ ( product.price /100 ) | number_format(2, ',','.' ) }} dh</span>
            <hr>
            <p>
            {{ product.description }}
            </p>
            
            <a href="{{ path('add_to_cart', {'id' : product.id }) }}" class="btn btn-dark">Ajouter au panier</a>
        </div>

        </div>
    </div>
<hr>
<h2 class="text-center">Découvrez les pâtisseries les plus commander</h2>
 <div class="row">
   {% for product in products %}
   <div class="col-md-3 p-4">
       {% include 'product/single_product.html.twig' %}
   </div>
   {% endfor %}
</div><!-- /.row -->

{% endblock %}